{
  "extends": "airbnb",
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/no-danger": 0,
    "react/sort-comp": [1, {
      order: [
        "static-methods",
        "lifecycle",
        "everything-else",
        "render"
      ]
    }],
    "object-curly-spacing": ["error", "never"]
  },
  "env": {
    "browser": true
  },
}
